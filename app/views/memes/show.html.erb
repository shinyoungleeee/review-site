<div class="row text-center">
  <h1><%= @meme.name %></h1>
  <p><strong>Contributor:</strong> <%= @meme.contributor.username %></p>
</div>
<div class="row text-center">
  <img src=<%= @meme.image_url %> alt=<%= @meme.name %> class="meme-image thumbnail">
</div>
<div class="row text-center">
  <p><%= @meme.description %></p>
</div>
<div class="row">
  <h5><%= link_to 'Update a Meme', edit_meme_path  %></h5>
  <h5><%= link_to 'Delete Meme', @meme, method: :delete, data: {confirm: "Are you sure?"} %></h5>
</div>

<div class="row">
  <h3>Reviews:</h3>
</div>
<div id="app"></div>

<% unless @review.errors.empty? %>
  <div>
    <%= @meme.errors.full_messages.to_sentence %>
  </div>
<% end %>

<div class="row">
  <% if !@current_user_review %>
    <h5 class="text-center">Review this Meme</h5>
    <%= form_for [@meme, @review] do |f| %>
    <div class="small-2 columns">
      <div class="input-group">
        <%= f.label :rating, class: "input-group-label" %>
        <%= f.text_field :rating, class: "input-group-field" %>
      </div>
    </div>
    <div class="small-10 columns">
      <div class="input-group">
        <%= f.label :body, class: "input-group-label" %>
        <%= f.text_field :body, class: "input-group-field" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Add Review", class: "button"%>
    </div>
    <% end %>
  <% end %>
  <p><%= link_to "Back", memes_path %></p>
</div>
